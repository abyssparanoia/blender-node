{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2018"],
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "newLine": "lf"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
